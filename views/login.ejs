<div class="row mt-5">
	<div class="col-md-6 m-auto">
		<div class="card border-primary card-body text-center">
            <h1><i class="bi bi-person-lock"></i> Login</h1>
			<p class="lead">SEDOB login portal</p>
			<%- include('partials/messages.ejs') %>
			<form action="/login" method="post">
				<div class="form-group has-danger mb-3">
					<label for="email">Email:</label>
					<input
						type="email"
						id="email"
						email="email"
						name="email"
						required
						class="form-control is-invalid" id="email-input" oninput="this.classList.replace('is-invalid', 'is-valid')"
                        placeholder="Enter Email"
						value="<%= typeof email !='undefined' ? email: '' %>"/>
				</div>

				<div class="form-group has-danger mb-3">
					<label for="password">Password:</label>
					<input
						type="password"
						
						name="password"
						required
						class="form-control is-invalid" id="password-input" oninput="this.classList.replace('is-invalid', 'is-valid')"
                        placeholder="Enter Password"
						value="<%= typeof password !='undefined' ? password: '' %>"/>
				</div>
					

				<button type="submit" class="btn btn-primary btn-block">Login</button>
			</form>
            
		</div>
	</div>
</div>
